{
  "manifest_version": 3,
  "name": "CodeCue â€“ LeetCode AI Hints, Algorithm & Python Solutions Assistant",
  "version": "1.0.1",

  "description": "AI-powered Chrome extension for solving LeetCode problems with hints, pseudocode, and Python solutions.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["https://api.groq.com/", "https://leetcode.com/*"],

  "permissions": ["storage"]
}
